<%- include('../sharedFiles/head.ejs') %>
</head>

<body>
    <%- include('../sharedFiles/navigation.ejs') %>
    <div>
        <% if(hasOrders) { %>
        <ul>
            <% orders.forEach(order => { %>
            <h1>#<%= order.id %></h1>
            <ul>
                <% if(order.products[0]) { order.products.forEach(element => { %>
                <li>Product: <%= element.title %>, quantity: <%= element.orderItem.quantity %>, price:
                    <%= element.orderItem.quantity * element.price %></li>
                <% }) } else { %>
                <li>Sorry, desired product no longer exists.</li>
                <% } %>
            </ul>
            <% }) %>
        </ul>
        <% } else { %>
        <p align="center">No orders yet!</p>
        <% } %>
    </div>
    <%- include('../sharedFiles/end.ejs') %>