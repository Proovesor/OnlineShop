<%- include('../sharedFiles/head.ejs') %>
</head>
<body>
    <%- include('../sharedFiles/navigation.ejs') %>
    <div align="center">
        <% if(prodArray) { %>
        <h1>Items:</h1>
        <% prodArray.forEach(element => { %>
            <p style="font-size: 25px; margin-bottom: 6px"><%= element.title %>: <%= element.quantity %>x</p>
            <form action="/delete-cart-product" method="POST" style="margin-top: 0; margin-left: 0">
                <input type="hidden" name="productId" value="<%= element.id %>">
                <button type="submit" class="btn">Delete</button>
            </form>
        <% }) %>
        <p style="font-size: 40px">Total price: $<%= price %></p>
        <% } else { %>
        <h1>Let's start shopping!</h1>
        <% } %>
    </div>
<%- include('../sharedFiles/end.ejs') %>