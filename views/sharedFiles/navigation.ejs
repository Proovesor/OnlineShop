<header class="main-header">
    <nav class="main-header__nav">
        <ul class="main-header__list">
            <li class="main-header__item">
                <a class="<%= path === '/' ? 'active' : '' %>" href="/">Shop</a>
            </li>
            <li class="main-header__item">
                <a class="<%= path === '/products' ? 'active' : '' %>" href="/products">Products</a>
            </li>
            <% if(isAuthenticated) { %>
            <li class="main-header__item" style="margin-left: 1rem" id="cart">
                <a class="<%= path === '/cart' ? 'active' : '' %>" href="/cart">Cart</a>
                <img src="/svg/shopping-cart.svg" alt="is it there?">
            </li>
            <li class="main-header__item" style="margin-left: 2rem">
                <a class="<%= path === '/orders' ? 'active' : '' %>" href="/orders">Orders</a>
            </li>
            <li class="main-header__item">
                <a class="<%= path === '/admin/add-product' ? 'active' : '' %>" href="/admin/add-product">Add
                    product</a>
            </li>
            <li class="main-header__item">
                <a class="<%= path === '/admin/products' ? 'active' : '' %>" href="/admin/products">Admin products</a>
            </li>
            <% } %>
        </ul>
        <ul class="main-header__list">
            <% if(!isAuthenticated) { %>
            <li class="main-header__item">
                <a class="<%= path === '/login' ? 'active' : '' %>" href="/login">Login</a>
            </li>
            <li class="main-header__item">
                <a class="<%= path === '/signup' ? 'active' : '' %>" href="/signup">Signup</a>
            </li>
            <% } %>
            <% if(isAuthenticated) { %>
            <li class="main-header__item">
                <form action="/logout" method="POST">
                    <!-- <a class="<%= path === '/logout' ? 'active' : '' %>" href="/login">Logout</a> -->
                    <button type="submit">Logout</button>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                </form>
            </li>
            <% } %>
        </ul>
    </nav>
</header>